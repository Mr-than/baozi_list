<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingStart="8dp"
    android:background="#F2F1F1"
    android:layout_marginStart="32dp"
    android:layout_marginEnd="32dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:id="@+id/detail_back_train"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="回库车次： 125"
        app:layout_constraintBottom_toTopOf="@+id/detail_train_number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:id="@+id/detail_train_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="车号： 6084"
        app:layout_constraintBottom_toTopOf="@+id/detail_train_in_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detail_back_train" />

    <TextView
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:id="@+id/detail_train_in_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="入段线时间： 08:26:39"
        app:layout_constraintBottom_toTopOf="@+id/detail_train_out_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detail_train_number" />

    <TextView
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/detail_train_out_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="出段线时间： 弓网压力"
        app:layout_constraintBottom_toTopOf="@+id/detail_train_pick_up_lane"
        app:layout_constraintTop_toBottomOf="@+id/detail_train_in_time"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/detail_train_pick_up_lane"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="接车股道： 30"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detail_train_out_time" />


</androidx.constraintlayout.widget.ConstraintLayout>