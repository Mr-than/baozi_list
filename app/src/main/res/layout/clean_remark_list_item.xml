<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/clean_remark_list_item_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/clean_remark_list_item_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="任务"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/clean_remark_list_item_checkbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/clean_remark_list_item_checkbox"
        app:layout_constraintTop_toTopOf="@+id/clean_remark_list_item_checkbox" />


</androidx.constraintlayout.widget.ConstraintLayout>