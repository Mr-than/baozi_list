<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/clean_add_train_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="车号"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/clean_add_lane_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="股道号"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="@+id/clean_add_train_number"
        app:layout_constraintEnd_toStartOf="@+id/clean_add_item_delete"
        app:layout_constraintStart_toEndOf="@+id/clean_add_train_number"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/clean_add_item_delete"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_marginEnd="16dp"
        android:contentDescription="删除"
        android:src="@drawable/delete"
        app:layout_constraintBottom_toBottomOf="@+id/clean_add_lane_number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/clean_add_remark_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="64dp"
        android:background="#EFEFEF"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clean_add_train_number" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="1dp"
        android:background="#E9E5E5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clean_add_remark_list" />


</androidx.constraintlayout.widget.ConstraintLayout>