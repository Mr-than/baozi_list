<?xml version="1.0" encoding="utf-8"?>
<com.example.baozi_list.ui.view.DeleteConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/disinfection_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/disinfection_car_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="车号"
        app:layout_constraintBottom_toBottomOf="@+id/disinfection_checkbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/disinfection_checkbox"
        app:layout_constraintTop_toTopOf="@+id/disinfection_checkbox" />


    <TextView
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:id="@+id/disinfection_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="时间："
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/disinfection_checkbox" />

    <LinearLayout
        android:id="@+id/disinfection_delete"
        android:orientation="horizontal"
        android:tag="delete_button"
        android:background="#f74c30"
        android:layout_width="200dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="@+id/disinfection_time"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:tag="delete_button_text"
            android:layout_marginStart="10dp"
            android:gravity="center|start"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:text="删除"
            android:background="#00000000"/>
    </LinearLayout>

    <View
        android:id="@+id/task_fold_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="1dp"
        android:background="#E9E5E5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/disinfection_time" />


</com.example.baozi_list.ui.view.DeleteConstraintLayout>